<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_intro3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/cast_expanded_controller_control_button_margin"
        android:layout_marginRight="@dimen/cast_expanded_controller_control_button_margin"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/cast_expanded_controller_control_toolbar_min_height"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_height"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_pantalla_principal" />
        <TextView
            android:id="@+id/tvPromt3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_marginTop="@dimen/margin_bottom_top_image"
            android:text="@string/txtIntro3"/>
    </LinearLayout>

</RelativeLayout>